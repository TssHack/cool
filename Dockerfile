# انتخاب تصویر پایه برای Node.js
FROM node:16

# تنظیم پوشه کاری در داخل کانتینر
WORKDIR /app

# کپی کردن فایل‌های پروژه به داخل کانتینر
COPY package*.json ./

# نصب وابستگی‌های پروژه
RUN npm install

# کپی کردن تمام فایل‌های پروژه به داخل کانتینر
COPY . .

# تنظیم پورت برای دسترسی به برنامه
EXPOSE 3000

# دستور اجرایی برای راه‌اندازی پروژه
CMD ["node", "هindex.js"]
